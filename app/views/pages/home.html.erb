<div class="banner-home p-5 mb-4">
  <div class="container-fluid text-center text-white py-5">
    <h1 class="display-5 fw-bold">Take My Book</h1>
    <p class="col-md-8 fs-4 w-100">A marketplace for trading and lending books.<br>How would you like to start?</p>
    <%= link_to "Borrow a book", books_path, class: "btn btn-danger rounded-0 text-light me-2" %>
    <%= link_to "Lend a book", new_book_path, class: "btn btn-outline-light rounded-0" %>
  </div>
</div>
<div class="container my-4">
  <div class="row">
    <div class="col-12">
      <h2 class="mb-4 border-bottom border-secondary">Newest books</h2>
    </div>
    <% @books.each do |book| %>
      <%= render "books/book", book: book %>
    <% end %>
  </div>
</div>
