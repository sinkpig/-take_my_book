<div class="navbar navbar-expand-sm bg-dark navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "/", class: "navbar-brand", style: "flex-grow: 2;" do %>
      <h2 class="text-white">
        <span class="text-muted"><i class="fa-solid fa-book-open me-2"></i>Take my</span>
        Book
      </h2>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-center" id="navbarSupportedContent" style="flex-grow: 2;">
      <ul class="navbar-nav align-items-center justify-content-between w-100">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= form_with url: books_path, method: :get, class: "input-group" do %>
              <%= text_field_tag :query, params[:query], class: "form-control border-0", placeholder: "Find a book" %>
              <%= button_tag class: "btn btn-secondary rounded-0" do %>
                <i class="fa-solid fa-magnifying-glass"></i>
              <% end %>
            <% end %>
          </li>
          <li class="nav-item dropdown">
            <%# <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <a class="nav-link dropdown-toggle pe-auto text-light" style="cursor: pointer;" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" >
              Welcome, <span class="fw-bold"><%= current_user.name %></span>
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "My profile", profile_path, class: "dropdown-item" %>
              <%= link_to "Add a new book", new_book_path, class: "dropdown-item" %>
              <%= link_to destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item text-danger" do %>
                <i class="fa-solid fa-arrow-right-from-bracket"></i>
                Log out
              <% end %>
            </div>
          </li>
        <% else %>
          <li class="nav-item ms-auto">
            <%= link_to "Login", new_user_session_path, class: "nav-link btn btn-danger text-light rounded-0 me-3 px-3" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign up", new_user_registration_path, class: "nav-link text-light text-decoration-underline" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
